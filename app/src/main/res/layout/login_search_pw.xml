<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#99FFC600" />

    <TextView
        android:id="@+id/pae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_alignParentTop="true"
        android:text="PAE"
        android:textAppearance="@style/pae"
        android:fontFamily="@font/test"
        android:gravity="top" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="101.25dp"
        android:textAppearance="@style/some_id"
        android:gravity="top"
        android:text="비밀번호 찾기"
        android:textColor="#000000"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="163.75dp"
        android:textAppearance="@style/some_id"
        android:gravity="top"
        android:text="이메일"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_marginRight="33.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="187.5dp"
        android:background="@drawable/rectangle_3"
        android:elevation="2.5dp"
        android:hint="test@test.com"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textColorHint="#73000000"
        tools:layout_editor_absoluteY="109dp" />

    <Button
        android:id="@+id/check"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_marginRight="33.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="273.75dp"
        android:background="@drawable/vector"
        android:elevation="5dp"
        android:textSize="22.5sp"
        android:text="찾 기"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="401.25dp"
        android:gravity="top"
        android:text="새로운 비밀번호 입력"
        android:textAppearance="@style/some_id"
        android:textColor="#000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/password_0007"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_marginRight="33.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="425dp"
        android:background="@drawable/rectangle_3"
        android:textSize="15sp"
        android:elevation="2.5dp"
        android:hint="영문+숫자+특수문자 포함 8자 이상"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:password="true"
        android:textColor="#000000"
        android:textColorHint="#73000000"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_marginRight="33.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="488.75dp"
        android:textAppearance="@style/some_id"
        android:gravity="top"
        android:text="비밀번호 확인"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/passwordCheck_0007"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_marginRight="33.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="512.75dp"
        android:background="@drawable/rectangle_3"
        android:elevation="2.5dp"
        android:hint="영문+숫자+특수문자 포함 8자 이상"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:password="true"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textColorHint="#73000000"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="330dp" />


    <Button
        android:id="@+id/go_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="37.5dp"
        android:layout_marginRight="37.5dp"
        android:layout_marginBottom="37.5dp"
        android:background="@drawable/vector"
        android:elevation="2.5dp"
        android:textSize="22.5sp"
        android:textColor="#FFFFFF"
        android:text="다 음" />


</RelativeLayout>