<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#99FFC600" />

    <TextView
        android:id="@+id/pae"
        android:layout_width="wrap_content"
        android:layout_height="46.25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="33.75dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/test"
        android:gravity="top"
        android:text="PAE"
        android:textAppearance="@style/pae" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:gravity="top"
        android:text="나눔정보"
        android:textAppearance="@style/some_id"
        android:textColor="#B3000000"
        android:textSize="28.75sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37.5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="103.75dp"
        android:textAppearance="@style/some_id"
        android:textSize="25sp"
        android:text="제목"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/title_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="103.75dp"
        android:layout_marginRight="37.5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:background="@drawable/rectangle_3"
        android:elevation="2.5dp"
        android:hint="제목을 입력하세요."
        android:textColor="#000000"
        android:padding="10dp"
        android:textColorHint="#73000000" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="160dp"
        android:text="날짜"
        android:textColor="#000000"  />

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:gravity="center"
        android:layout_marginTop="160dp"
        android:text="날짜"
        android:textColor="#B3A0A0A0"  />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37.5dp"
        android:layout_marginTop="160dp"
        android:text="닉네임"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/nickname_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="160dp"
        android:text="닉네임"
        android:textColor="#B3A0A0A0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37.5dp"
        android:layout_marginTop="190.75dp"
        android:text="상태"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/state_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="190.75dp"
        android:text="상태"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#B3A0A0A0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="190.75dp"
        android:textSize="15sp"
        android:text="카테고리"
        android:textColor="#000000"  />

    <TextView
        android:id="@+id/category_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="190.75dp"
        android:text="카테고리"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#B3A0A0A0"  />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37.5dp"
        android:layout_marginTop="221.5dp"
        android:text="주소"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="221.5dp"
        android:ems="5"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="주소"
        android:textColor="#B3A0A0A0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="221.5dp"
        android:textSize="15sp"
        android:text="가격"
        android:textColor="#000000"  />

    <EditText
        android:id="@+id/price_et"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="221.5dp"
        android:hint="가격을 입력하세요"
        android:textSize="15sp"
        android:background="@drawable/rectangle_3"
        android:textColor="#000000"
        android:textColorHint="#B3A0A0A0"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="260sp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:background="@drawable/rectangle_4"
            android:onClick="onClick" />

        <Button
            android:id="@+id/btn_UploadPicture"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_yellow"
            android:onClick="onClick"
            android:text="사진 선택"
            android:textSize="15sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/content_et"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:gravity="top"
        android:layout_marginLeft="41.25dp"
        android:layout_marginRight="41.25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/rectangle_4"
        android:hint="내용을 입력하세요."
        android:padding="16dp"
        android:textColor="#000000"
        android:textColorHint="#c0c0c0" />


    <Button
        android:id="@+id/reg_button"
        android:layout_width="133.75dp"
        android:layout_height="37.5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="278.75dp"
        android:layout_marginRight="37.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37.5dp"
        android:background="@drawable/rectangle_1"
        android:textSize="20sp"
        android:text="완 료"
        android:textColor="#80000000" />


</RelativeLayout>