<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="match_parent"
        android:layout_height="50.29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#99FFC600" />

    <TextView
        android:id="@+id/pae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_alignParentTop="true"
        android:text="PAE"
        android:textAppearance="@style/pae"
        android:fontFamily="@font/test"
        android:gravity="top" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="101.25dp"
        android:gravity="top"
        android:text="이메일 찾기"
        android:textColor="#000000"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="163.75dp"
        android:gravity="top"
        android:text="전화번호 입력"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_marginRight="33.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="187.5dp"
        android:background="@drawable/rectangle_3"
        android:elevation="2.5dp"
        android:hint="010-1234-5678"
        android:inputType="textPersonName"
        android:textSize="15sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#73000000"/>

    <Button
        android:id="@+id/check"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_marginRight="33.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="276.25dp"
        android:background="@drawable/vector"
        android:gravity="center_horizontal|center_vertical"
        android:elevation="5dp"
        android:text="찾 기"
        android:textSize="22.5sp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/go_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="37.5dp"
        android:layout_marginRight="37.5dp"
        android:layout_marginBottom="37.5dp"
        android:background="@drawable/vector"
        android:elevation="5dp"
        android:text="다음" />

</RelativeLayout>