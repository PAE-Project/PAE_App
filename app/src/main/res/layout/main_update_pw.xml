<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1.25dp"
        android:background="#99FFC600"
        />

    <TextView
        android:id="@+id/pae"
        android:layout_width="wrap_content"
        android:layout_height="46.25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="PAE"
        android:textAppearance="@style/pae"
        android:fontFamily="@font/test"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="38.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="97.5dp"
        android:textAppearance="@style/some_id"
        android:gravity="center_horizontal|center_vertical"
        android:text="비밀번호 변경"
        android:textColor="#000000"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37.5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="162.5dp"
        android:textAppearance="@style/some_id"
        android:gravity="top"
        android:text="새로운 비밀번호 입력"
        android:textColor="#000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/pw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37.5dp"
        android:layout_marginRight="37.5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="187.5dp"
        android:background="@drawable/rectangle_3"
        android:elevation="2.5dp"
        android:hint="영문+숫자+특수문자 포함 8자 이상"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:password="true"
        android:textColor="#000000"
        android:textColorHint="#73000000"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37.5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:textAppearance="@style/some_id"
        android:gravity="top"
        android:text="비밀번호 확인"
        android:textSize="15sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/pw_ch"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="38.75dp"
        android:layout_marginRight="38.75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="275dp"
        android:background="@drawable/rectangle_3"
        android:elevation="2.5dp"
        android:hint="영문+숫자+특수문자 포함 8자 이상"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:password="true"
        android:textColor="#000000"
        android:textColorHint="#73000000"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="38.75dp"
        android:layout_marginRight="38.75dp"
        android:layout_marginBottom="38.75dp"
        android:background="@drawable/vector"
        android:elevation="2.5dp"
        android:textSize="22.5sp"
        android:textColor="#FFFFFF"
        android:text="비밀번호 재설정" />

</RelativeLayout>