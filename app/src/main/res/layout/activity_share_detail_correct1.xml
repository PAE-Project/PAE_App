<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#99FFC600" />

    <TextView
        android:id="@+id/pae"
        android:layout_width="wrap_content"
        android:layout_height="46.25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="33.75dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/test"
        android:gravity="top"
        android:text="PAE"
        android:textAppearance="@style/pae" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:gravity="top"
        android:text="내 나눔 정보"
        android:textAppearance="@style/some_id"
        android:textColor="#B3000000"
        android:textSize="28.75sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="37.5dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="75dp"
                android:textSize="25sp"
                android:gravity="top"
                android:text="제목"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/category_tv"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="38.75dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="112.5dp"
                android:textAppearance="@style/some_id"
                android:gravity="top"
                android:text="작성일"
                android:textSize="15sp"
                android:textColor="#B3A0A0A0" />

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="237.5dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="112.5dp"
                android:textSize="15sp"
                android:gravity="top"
                android:text="날짜"
                android:textColor="#B3A0A0A0" />

            <TextView
                android:id="@+id/content_tv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="37.5dp"
                android:layout_marginRight="37.5dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="150dp"
                android:padding="10dp"
                android:background="@drawable/rectangle_4"
                android:textSize="15sp"
                android:text="내용"
                android:textColor="#B3A0A0A0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="380dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:maxWidth="200dp"
                    android:maxHeight="200dp"
                    android:background="@drawable/rectangle_4"
                    android:onClick="onClick" />

                <Button
                    android:id="@+id/btn_UploadPicture"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_yellow"
                    android:onClick="onClick"
                    android:text="사진 선택"
                    android:textSize="15sp" />

            </LinearLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="37.5dp"
                android:layout_marginBottom="37.5dp"
                android:background="@drawable/vector"
                android:elevation="2.5dp"
                android:text="수정하기"
                android:textColor="#FFFFFF"
                android:textSize="22.5sp" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>