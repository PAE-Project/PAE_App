<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="370dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.329"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="당신에 대해 알려주세요"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="106dp"
                tools:layout_editor_absoluteY="103dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:text="이름"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="90dp" />

            <EditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/memo_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:hint="이름을 입력해 주세요"
                android:textColorHint="#C0C0C0"
                android:textColor="#000000"
                tools:layout_editor_absoluteY="109dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="닉네임"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="267dp" />

            <EditText
                android:id="@+id/NickName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/memo_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:hint="닉네임을 입력해 주세요"
                android:textColorHint="#C0C0C0"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="330dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="생년월일"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="267dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Year"
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/memo_border"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:hint="년(4자)"
                    android:textColorHint="#C0C0C0"
                    android:textColor="#000000"
                    android:maxLength="4"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/Month"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/memo_border"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:hint="월"
                    android:textColorHint="#C0C0C0"
                    android:textColor="#000000"
                    android:maxLength="2"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/Day"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/memo_border"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:hint="일"
                    android:textColorHint="#C0C0C0"
                    android:textColor="#000000"
                    android:maxLength="2"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="연락처"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="267dp" />

            <EditText
                android:id="@+id/Phonenum"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/memo_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:hint="연락처를 입력해주세요(-제외)"
                android:textColorHint="#C0C0C0"
                android:textColor="#000000"
                android:maxLength="11"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="330dp" />

            <TextView
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="성별"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="267dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/male"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:textColor="#C0C0C0"
                    android:backgroundTint="@color/button_background_color"
                    android:ems="10"
                    android:text="남자" />

                <Button
                    android:id="@+id/female"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:textColor="#C0C0C0"
                    android:backgroundTint="@color/button_background_color"
                    android:ems="10"
                    android:text="여자" />
            </LinearLayout>

            <TextView
                android:id="@+id/adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="주소"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="267dp" />

            <EditText
                android:id="@+id/adress1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/memo_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:hint="도로명 주소 입력"
                android:textColorHint="#C0C0C0"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="330dp" />

            <EditText
                android:id="@+id/adress2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/memo_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:hint="세부주소 입력"
                android:textColorHint="#C0C0C0"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="330dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/go_0006"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_yellow"
        android:text="다음"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934" />

</androidx.constraintlayout.widget.ConstraintLayout>