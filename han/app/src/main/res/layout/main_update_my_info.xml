<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="370dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="370dp"
            android:layout_height="600dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.122"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="내 정보 수정"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="106dp"
                tools:layout_editor_absoluteY="103dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="90dp" />

            <EditText
                android:id="@+id/ch_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/memo_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:hint="이름을 입력해 주세요"
                android:textColorHint="#C0C0C0"
                android:textColor="#000000"
                tools:layout_editor_absoluteY="109dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="267dp" />

            <EditText
                android:id="@+id/ch_nick"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/memo_border"
                android:ems="10"
                android:hint="닉네임을 입력해 주세요"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHint="#C0C0C0"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="330dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사진"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="267dp" />

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/memo_border"
                android:ems="10"
                android:hint="이미지 첨부"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHint="#C0C0C0"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="330dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="연락처"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="267dp" />

            <EditText
                android:id="@+id/ch_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/memo_border"
                android:ems="10"
                android:hint="연락처를 입력해 주세요"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHint="#C0C0C0"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="330dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주소"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="267dp" />

            <EditText
                android:id="@+id/ch_address1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/memo_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="도로명 주소 입력"
                android:padding="10dp"
                android:textColorHint="#C0C0C0"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="330dp" />

            <EditText
                android:id="@+id/ch_address2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/memo_border"
                android:ems="10"
                android:hint="세부주소 입력"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHint="#C0C0C0"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="330dp" />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="도우미 여부"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="267dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="동의" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="비동의" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/home"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_yellow"
        android:text="확인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934" />


</androidx.constraintlayout.widget.ConstraintLayout>